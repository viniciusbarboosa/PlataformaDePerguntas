<%- include('./partials/header.ejs'); %>
    <%- include('./partials/navbar.ejs'); %> 


    <div class="container">      
        <hr>
         <h1>Perguntas</h1>
         <a href="/perguntar" class="btn btn-success">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <h3><%= pergunta.descricao %></h3>
                        <a href="pergunta/<%= pergunta.id %>"><button class="btn btn-primary">
                        Responder
                        </button></a>
                </div>
            </div>
       <% }) %>

    </div>






